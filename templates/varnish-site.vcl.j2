{% for client in range(1, plone_client_count + 1) %}
backend {{ host }}_zeoclient{{ client }} {
    .host = "127.0.0.1";
    .port = "{{ '%s'%(plone_client_base_port|int + loop.index-1) }}";
    .connect_timeout = 10s;
    .first_byte_timeout = 300s;
    .between_bytes_timeout = 600s;
    .max_connections = 30;
