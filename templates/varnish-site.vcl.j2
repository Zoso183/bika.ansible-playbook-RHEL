{% endfor %}

director {{ host }}_director client {
{% for client in range(1, plone_client_count + 1) %}
        { .backend = {{ host }}_zeoclient{{ client }}; .weight = 5; }
{% endfor %}
}

sub vcl_recv {
    if (req.http.host ~ "^{{ server_name }}$")  { set req.backend = {{host}}_director; }
}

# store in cache only by url, not backend host
sub vcl_hash {
  hash_data(req.url);
  return (hash);
}
